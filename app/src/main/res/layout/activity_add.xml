<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your recipe..."
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/recipeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/recipeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe name"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/recipeCookTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cook time"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/recipeQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Servings"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/recipeCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calories"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/recipeDietLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diet labels"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/recipeHealthLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Health labels"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/recipeIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredients"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="10dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/addRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Recipe"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_marginHorizontal="40dp"/>

</LinearLayout>