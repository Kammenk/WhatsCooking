<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:weightSum="1"
    android:background="@drawable/browse_btn_background"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="3dp"
    >

<androidx.cardview.widget.CardView
    android:id="@+id/searchImageCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    >
    <ImageView
        android:id="@+id/gridImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        />

</androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/innerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gridTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Result text"
            android:textColor="#FFED5F5F"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/gridQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Result text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gridTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result text"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/gridCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result text"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:visibility="gone"

            />
        <TextView
            android:id="@+id/gridDietLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result text"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:visibility="gone"

            />
        <TextView
            android:id="@+id/gridHealthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result text"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/gridIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result text"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:visibility="gone"
            />


    </LinearLayout>


</LinearLayout>